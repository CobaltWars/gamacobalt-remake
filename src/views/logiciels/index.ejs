<%- include('../layouts/main', { title: 'Logiciels' }) %>

<div class="container">
  <!-- Hero Section -->
  <section class="hero">
    <h1>Nos Logiciels</h1>
    <p>Découvrez notre collection d'outils et d'applications développés par notre communauté.</p>
  </section>

  <!-- Filter Section -->
  <section class="filter-section">
    <div class="search-bar">
      <input type="text" placeholder="Rechercher un logiciel..." class="form-input">
      <button class="button button-primary">Rechercher</button>
    </div>
    <div class="filter-options">
      <select class="form-input">
        <option value="">Toutes les catégories</option>
        <option value="utility">Utilitaires</option>
        <option value="productivity">Productivité</option>
        <option value="development">Développement</option>
        <option value="multimedia">Multimédia</option>
      </select>
      <select class="form-input">
        <option value="">Trier par</option>
        <option value="recent">Plus récents</option>
        <option value="popular">Plus populaires</option>
        <option value="name">Nom (A-Z)</option>
      </select>
    </div>
  </section>

  <!-- Software Grid -->
  <section>
    <div class="cards-grid">
      <% if (locals.softwares && softwares.length > 0) { %>
        <% softwares.forEach(software => { %>
          <div class="card">
            <div class="card-image" style="background-image: url('<%= software.get('imageUrl') || '/public/images/default-software.jpg' %>');"></div>
            <div class="card-content">
              <h3 class="card-title"><%= software.get('title') %></h3>
              <p class="card-description"><%= software.get('description') %></p>
              <div class="card-meta">
                <% software.get('tags').forEach(tag => { %>
                  <span class="card-tag"><%= tag %></span>
                <% }); %>
              </div>
              <a href="/logiciels/<%= software.id %>" class="button button-primary">Télécharger</a>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <!-- Contenu statique pour la démo -->
        <div class="card">
          <div class="card-image" style="background-image: url('/public/images/software1.jpg');"></div>
          <div class="card-content">
            <h3 class="card-title">CMD & Powershell</h3>
            <p class="card-description">Logiciel qui permet de choisir l'exécution de cmd ou de powershell avec une interface simplifiée.</p>
            <div class="card-meta">
              <span class="card-tag">Utilitaire</span>
              <span class="card-tag">Système</span>
            </div>
            <a href="#" class="button button-primary">Télécharger</a>
          </div>
        </div>
        <div class="card">
          <div class="card-image" style="background-image: url('/public/images/software2.jpg');"></div>
          <div class="card-content">
            <h3 class="card-title">Projet Débile</h3>
            <p class="card-description">Un projet expérimental avec des fonctionnalités inattendues et amusantes.</p>
            <div class="card-meta">
              <span class="card-tag">Divertissement</span>
              <span class="card-tag">Expérimental</span>
            </div>
            <a href="#" class="button button-primary">Télécharger</a>
          </div>
        </div>
        <div class="card">
          <div class="card-image" style="background-image: url('/public/images/software3.jpg');"></div>
          <div class="card-content">
            <h3 class="card-title">Genesis</h3>
            <p class="card-description">Un navigateur web fait maison avec des fonctionnalités uniques pour les développeurs.</p>
            <div class="card-meta">
              <span class="card-tag">Navigateur</span>
              <span class="card-tag">Développement</span>
            </div>
            <a href="#" class="button button-primary">Télécharger</a>
          </div>
        </div>
        <div class="card">
          <div class="card-image" style="background-image: url('/public/images/software4.jpg');"></div>
          <div class="card-content">
            <h3 class="card-title">Youtube.py</h3>
            <p class="card-description">Un logiciel open source visant à offrir une meilleure expérience que l'interface YouTube originale.</p>
            <div class="card-meta">
              <span class="card-tag">Multimédia</span>
              <span class="card-tag">Open Source</span>
            </div>
            <div class="button-group">
              <a href="#" class="button button-primary">Télécharger</a>
              <a href="#" class="button button-secondary">GitHub</a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </section>

  <!-- Pagination -->
  <section class="pagination">
    <a href="#" class="pagination-item active">1</a>
    <a href="#" class="pagination-item">2</a>
    <span class="pagination-separator">...</span>
    <a href="#" class="pagination-item">5</a>
    <a href="#" class="pagination-item pagination-next">Suivant &raquo;</a>
  </section>
</div>
