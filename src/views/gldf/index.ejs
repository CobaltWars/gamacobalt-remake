<%- include('../layouts/main', { title: 'GLDF Communauté' }) %>

<div class="container">
  <!-- Hero Section -->
  <section class="hero">
    <h1>GLDF Communauté</h1>
    <p>Rejoignez notre communauté de créateurs passionnés, partagez vos projets et découvrez les créations des autres membres.</p>
    <div class="cta-buttons">
      <a href="/auth/register" class="button button-primary">Créer un compte</a>
      <a href="/auth/login" class="button button-secondary">Se connecter</a>
    </div>
  </section>

  <!-- Featured Community Projects -->
  <section>
    <h2>Projets communautaires récents</h2>
    <div class="cards-grid">
      <% if (locals.projects && projects.length > 0) { %>
        <% projects.forEach(project => { %>
          <div class="card">
            <div class="card-image" style="background-image: url('<%= project.get('imageUrl') || '/public/images/default-project.jpg' %>');"></div>
            <div class="card-content">
              <h3 class="card-title"><%= project.get('title') %></h3>
              <p class="card-description"><%= project.get('description') %></p>
              <div class="card-author">Par <a href="/profile/<%= project.get('author').id %>"><%= project.get('author').get('username') %></a></div>
              <a href="/gldf/projects/<%= project.id %>" class="button button-primary">Voir le projet</a>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="empty-state">
          <p>Aucun projet communautaire pour le moment. Soyez le premier à partager votre création !</p>
        </div>
      <% } %>
    </div>
  </section>

  <!-- How It Works -->
  <section>
    <h2>Comment ça marche</h2>
    <div class="feature-grid">
      <div class="feature-item">
        <div class="feature-icon">1</div>
        <h3>Créez un compte</h3>
        <p>Inscrivez-vous gratuitement pour rejoindre notre communauté de développeurs et créateurs.</p>
      </div>
      <div class="feature-item">
        <div class="feature-icon">2</div>
        <h3>Partagez vos projets</h3>
        <p>Publiez vos jeux, logiciels, ou autres créations avec des images, vidéos et descriptions.</p>
      </div>
      <div class="feature-item">
        <div class="feature-icon">3</div>
        <h3>Connectez-vous</h3>
        <p>Interagissez avec d'autres créateurs, recevez des commentaires et collaborez sur des projets.</p>
      </div>
    </div>
  </section>

  <!-- Categories -->
  <section>
    <h2>Catégories</h2>
    <div class="category-grid">
      <a href="/gldf/projects?category=jeux" class="category-item">
        <div class="category-icon">🎮</div>
        <h3>Jeux</h3>
      </a>
      <a href="/gldf/projects?category=logiciels" class="category-item">
        <div class="category-icon">💻</div>
        <h3>Logiciels</h3>
      </a>
      <a href="/gldf/projects?category=art" class="category-item">
        <div class="category-icon">🎨</div>
        <h3>Art & Design</h3>
      </a>
      <a href="/gldf/projects?category=audio" class="category-item">
        <div class="category-icon">🔊</div>
        <h3>Audio</h3>
      </a>
      <a href="/gldf/projects?category=mobile" class="category-item">
        <div class="category-icon">📱</div>
        <h3>Mobile</h3>
      </a>
      <a href="/gldf/projects?category=web" class="category-item">
        <div class="category-icon">🌐</div>
        <h3>Web</h3>
      </a>
    </div>
  </section>
</div>
